<%- include ../../partials/header.ejs%>
    <%- include ../../partials/navbar.ejs%>
        <%- include ../../partials/sidebar.ejs%>
            <div class="content-wrapper">
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <div class="container-fluid">
                        <div class="row mb-2">
                            <div class="col-sm-6">
                                <h1>Voucher</h1>
                            </div>
                            <div class="col-sm-6">
                                <ol class="breadcrumb float-sm-right">
                                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                                    <li class="breadcrumb-item "><a href="/voucher">Voucher</a></li>
                                    </li>
                                    <li class="breadcrumb-item active">Add</li>
                                    </li>
                                </ol>
                            </div>
                        </div>
                    </div><!-- /.container-fluid -->
                </section>

                <!-- Main content -->
                <section class="content">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-12">
                                <div class="card">

                                    <!-- /.card-header -->
                                    <div class="card-body">
                                        <div class="card card-primary">
                                            <div class="card-header">
                                                <h3 class="card-title">Form Add New Voucher</h3>
                                            </div>
                                            <!-- /.card-header -->
                                            <!-- form start -->
                                            <form action="/voucher/create" method="POST" enctype="multipart/form-data">
                                                <div class="card-body">
                                                    <div class="form-group">
                                                        <label for="name">Game Name</label>
                                                        <input type="text" name="name" class="form-control" id="name"
                                                            placeholder="Input game name" required>
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Category</label>
                                                        <select class="form-control select2" style="width: 100%;"
                                                            name="category" required>
                                                            <option selected="selected">Choose Category</option>
                                                            <% category.forEach(el=>{%>
                                                                <option value="<%=el._id%>">
                                                                    <%=el.name%>
                                                                </option>
                                                                <%})%>
                                                        </select>
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Nominal</label>
                                                        <div class="select2-purple">
                                                            <select class="form-control select2" multiple="multiple"
                                                                style="width: 100%;" name="nominals"
                                                                data-placeholder="Choose Nominal" required>
                                                                <% nominal.forEach(el=>{%>
                                                                    <option value="<%=el._id%>">
                                                                        <%=el.coinName%> - <%=el.coinQuantity%>
                                                                    </option>
                                                                    <%})%>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="image">Thumbnail</label>
                                                        <input type="file" name="image" class="form-control" id="image"
                                                            placeholder="Input Image" required>
                                                        <br>
                                                        <img src="" id="preview">
                                                    </div>
                                                </div>
                                                <!-- /.card-body -->

                                                <div class="card-footer">
                                                    <button type="submit" class="btn btn-primary">Submit</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                    <!-- /.card-body -->
                                </div>
                                <!-- /.card -->

                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- /.row -->
                    </div>
                    <!-- /.container-fluid -->
                </section>
                <!-- /.content -->
            </div>
            <%- include ../../partials/footer.ejs%>
                <%- include ../../partials/js.ejs%>

                    <script>
                        function readUrl(input) {
                            if (input.files && input.files[0]) {
                                const reader = new FileReader();
                                reader.onload = function (e) {
                                    $("#preview").attr("src", e.target.result)
                                    $("#preview").attr("width", "20%")
                                    $("#preview").attr("height", "20%")
                                }

                                reader.readAsDataURL(input.files[0])
                            }
                        }
                        $("#image").change(function () {
                            readUrl(this)
                        })
                    </script>