<%- include ../../partials/header.ejs%>
    <%- include ../../partials/navbar.ejs%>
        <%- include ../../partials/sidebar.ejs%>
            <div class="content-wrapper">
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <div class="container-fluid">
                        <div class="row mb-2">
                            <div class="col-sm-6">
                                <h1>Nominal</h1>
                            </div>
                            <div class="col-sm-6">
                                <ol class="breadcrumb float-sm-right">
                                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                                    <li class="breadcrumb-item "><a href="/nominal">Nominal</a></li>
                                    </li>
                                    <li class="breadcrumb-item active">Edit</li>
                                    </li>
                                </ol>
                            </div>
                        </div>
                    </div><!-- /.container-fluid -->
                </section>

                <!-- Main content -->
                <section class="content">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-12">
                                <div class="card">

                                    <!-- /.card-header -->
                                    <div class="card-body">
                                        <div class="card card-primary">
                                            <div class="card-header">
                                                <h3 class="card-title">Form Edit Category "<%=nominal.coinName%>"</h3>
                                            </div>
                                            <!-- /.card-header -->
                                            <!-- form start -->
                                            <form action="/nominal/edit/<%=nominal._id%>?_method=PUT" method="POST">
                                                <div class="card-body">
                                                    <div class="form-group">
                                                        <label>Coin Name</label>
                                                        <select class="form-control select2" style="width: 100%;"
                                                            name="coinName" required>
                                                            <option selected="selected">Choose Coin</option>
                                                            <option value="Gold" <%if(nominal.coinName==="Gold" ){%>
                                                                selected
                                                                <%}%>
                                                                    >Gold
                                                            </option>
                                                            <option value="Diamond" <%if(nominal.coinName==="Diamond"
                                                                ){%>
                                                                selected
                                                                <%}%>>Diamond
                                                            </option>
                                                            <option value="Jewel" <%if(nominal.coinName==="Gold" ){%>
                                                                Jewel
                                                                <%}%>>Jewel
                                                            </option>
                                                        </select>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="coinQty">Coin Qty</label>
                                                        <input type="number" name="coinQty" class="form-control"
                                                            value="<%=nominal.coinQuantity%>" id="coinQty"
                                                            placeholder="Enter coin quantity" required>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="coinPrice">Price</label>
                                                        <input type="number" name="coinPrice" class="form-control"
                                                            value="<%=nominal.price%>" id="coinPrice"
                                                            placeholder="Enter coin price" required>
                                                    </div>
                                                </div>
                                                <!-- /.card-body -->

                                                <div class="card-footer">
                                                    <button type="submit" class="btn btn-primary">Submit</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                    <!-- /.card-body -->
                                </div>
                                <!-- /.card -->

                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- /.row -->
                    </div>
                    <!-- /.container-fluid -->
                </section>
                <!-- /.content -->
            </div>
            <%- include ../../partials/footer.ejs%>
                <%- include ../../partials/js.ejs%>