<table id="example2" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>No.</th>
            <th>Payment Type</th>
            <th>Banks</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <% for(let i=0; i< payment.length; i++){%>
            <tr>
                <td>
                    <%=i+1%>
                </td>
                <td>
                    <%=payment[i].type%>
                </td>
                <td>
                    <% payment[i].banks.forEach(n=>{ %>
                        <span class="badge badge-primary">
                            <%=n.userAccount%>
                                <%=n.bankName%>
                                    <%=n.noRekening%>
                        </span>
                        <% }) %>
                </td>
                <td>
                    <% if(payment[i].status==="Y" ){ %>
                        <span class="badge badge-success">
                            Active
                        </span>
                        <% }else{ %>
                            <span class="badge badge-secondary">
                                InActive
                            </span>
                            <% } %>
                </td>
                <td>
                    <form action="/payment/delete/<%= payment[i]._id %>?_method=DELETE" method="POST">
                        <a href="/payment/edit/<%= payment[i]._id %>" class="btn sm btn-info btn-sm mr-1"><i
                                class="fas fa-pencil-alt mr-2"></i>Ubah</a>
                        <button class="btn btn-danger btn-sm"><i class="fas fa-trash mr-2"></i>Hapus</button>
                    </form>
                </td>
            </tr>
            <%}%>
    </tbody>
</table>